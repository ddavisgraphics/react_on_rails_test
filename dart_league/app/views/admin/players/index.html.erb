<p id="notice"><%= notice %></p>

<h1>Admin Players</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_players.each do |admin_player| %>
      <tr>
        <td><%= admin_player.first_name %></td>
        <td><%= admin_player.last_name %></td>
        <td><%= link_to 'Show', admin_player %></td>
        <td><%= link_to 'Edit', edit_admin_player_path(admin_player) %></td>
        <td><%= link_to 'Destroy', admin_player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

